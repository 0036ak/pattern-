#include<stdio.h>//horizontal triangle pattern 
int main ()
{
int n;
printf("enter the number oof rorw");
scanf("%d",&n);
for(int i=1;i<=2*n-1;i++)
   {
     if(i>n){
             for(int k=1;k<=2*n-i;k++)
             printf("* ");
             }
     else 
     for(int j=1;j<=i;j++)
        {
          printf("* ");
        }
        printf("\n");
        }
        return 0;
